<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="userInfo" namespace="/api/userinfo" extends="json-default">
		<action name="*" class="com.ttsofts.action.user.UserInfoAction" method="{1}">
			<result name="success" type="json">
				<param name="root">result</param>
			</result>
		</action>
	</package>
	<package name="userMenu" namespace="/api/usermenu" extends="json-default">
		<action name="*" class="com.ttsofts.action.user.UserMenuAction" method="{1}">
			<result name="success" type="json">
				<param name="root">result</param>
			</result>
		</action>
	</package>
	<package name="userPower" namespace="/api/userpower" extends="json-default">
		<action name="*" class="com.ttsofts.action.user.UserPowerAction" method="{1}">
			<result name="success" type="json">
				<param name="root">result</param>
			</result>
		</action>
	</package>
	<package name="userInfoPower" namespace="/api/userinfopower" extends="json-default">
		<action name="*" class="com.ttsofts.action.user.UserInfoPowerAction" method="{1}">
			<result name="success" type="json">
				<param name="root">result</param>
			</result>
		</action>
	</package>
</struts>